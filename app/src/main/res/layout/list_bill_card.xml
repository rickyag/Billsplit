<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/containerBillCard"
    android:layout_width="match_parent"
    app:cardElevation="2dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="111dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:id="@+id/totalTextView"
            android:gravity="left|center_vertical|center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/itemlist_namabill"
            android:layout_below="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Bill Name"
            android:id="@+id/textView"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/textView4" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="X"
            android:id="@+id/btnDeleteListBill"
            android:gravity="center_vertical|center_horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/itemlist_pricebill"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical|center_horizontal|right"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/itemlist_namabill"
            android:layout_alignStart="@+id/itemlist_namabill" />

        <TextView
            android:id="@+id/itemlist_namabill"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical|center_horizontal|left"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView"
            android:layout_above="@+id/itemlist_pricebill" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text=":"
            android:id="@+id/textView4"
            android:gravity="left|center_vertical|center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/totalTextView"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_below="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text=":"
            android:id="@+id/textView5"
            android:gravity="left|center_vertical|center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4" />

    </RelativeLayout>
</android.support.v7.widget.CardView>